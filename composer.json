{
    "name": "permittedleader/tables-for-laravel",
    "description": "Tables for Laravel using the Tiffey layout engine",
    "type": "project",
    "require": {
        "laravel/framework": "^10.44",
        "livewire/livewire": "^3.0",
        "maatwebsite/excel": "^3.1",
        "permittedleader/tiffey": "~1.0.x-dev",
        "permittedleader/flash-messages": "^2.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-laravel": "^2.3",
        "pestphp/pest-plugin-livewire": "^2.1",
        "orchestra/testbench": "^8.21"
    },
    "authors": [
        {
            "name": "Myles Smith",
            "email": "159888845+PermittedLeader@users.noreply.github.com"
        }
    ],
    "license": "GNU GPLv3",
    "autoload": {
        "psr-4": {
            "Permittedleader\\TablesForLaravel\\": "src/"
        }
    },
    "repositories": {
        "flash-messages": {
            "type": "path",
            "url": "../flash-messages",
            "options": {
                "symlink": true
            }
        },
        "tiffey": {
            "type": "path",
            "url": "../tiffey",
            "options": {
                "symlink": true
            }
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Permittedleader\\TablesForLaravel\\TablesForLaravelServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    }
}
